<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:id="@+id/time_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_timer_24"
            app:tint="@color/coolred"
            android:layout_margin="8dp"
            android:contentDescription="timer15"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:textSize="18sp"
            android:textColor="@color/coolred"
            android:text="15 Minute"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/time_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_timer_24"
            app:tint="@color/coolred"
            android:layout_margin="8dp"
            android:contentDescription="timer30"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:padding="8dp"
            android:textSize="18sp"
            android:textColor="@color/coolred"
            android:contentDescription="30minute"
            android:text="30 Minute"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/time_60"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_timer_24"
            app:tint="@color/coolred"
            android:layout_margin="8dp"
            android:contentDescription="timer60"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:textSize="18sp"
            android:textColor="@color/coolred"
            android:text="60 Minute"/>
    </LinearLayout>


</LinearLayout>